pipeline {
    agent any

    // Supprimez la section tools si vous n'utilisez pas NodeJS
    // ou configurez-le correctement dans Jenkins > Global Tool Configuration

    environment {
        APP_NAME = "micro-auth"
        RELEASE = "1.0.0"
        DOCKER_USER = "wafa23"
        IMAGE_NAME = "${DOCKER_USER}/${APP_NAME}"
        IMAGE_TAG = "${RELEASE}-${BUILD_NUMBER}"
        // SONAR_HOST est optionnel - supprimez si non utilisé
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/wafaabbes/micro-auth.git',
                        credentialsId: 'github' // Doit exister dans Jenkins
                    ]]
                ])
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm run test:unit'
                sh 'npm run test:integration'
            }
        }

        // Les autres étapes peuvent être ajoutées progressivement
    }

    post {
        always {
            echo 'Pipeline terminé - statut: ${currentBuild.result}'
        }
    }
}
