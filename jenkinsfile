// Supprimez tous les commentaires avant de tester
pipeline {
    agent any

    options {
        skipDefaultCheckout true // Ã‰vite le double checkout
    }

    environment {
        APP_NAME = "micro-auth"
        RELEASE = "1.0.0"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/wafaabbes/micro-auth.git',
                        credentialsId: 'github'
                    ]],
                    extensions: [[
                        $class: 'CleanBeforeCheckout'
                    ]]
                ])
            }
        }

        stage('Build') {
            steps {
                sh 'node --version'
                sh 'npm --version'
                sh 'npm install'
            }
        }
    }

    post {
        always {
            echo "Build status: ${currentBuild.currentResult}"
        }
    }
}
