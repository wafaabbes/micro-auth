pipeline {
    agent any

    environment {
        NODE_ENV = 'development'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/wafaabbes/micro-auth.git', branch: 'main'
            }
        }

        stage('Vérification des versions') {
            steps {
                sh '''
                    echo "===== Node & NPM Versions ====="
                    node -v
                    npm -v
                '''
            }
        }

        stage('Install') {
            steps {
                sh '''
                    echo "===== Installation des dépendances ====="
                    npm install
                '''
            }
        }
    }

     stage('Tests unitaires') {
            steps {
                script {
                    echo '===== Lancement des tests unitaires ====='
                    sh 'npm test'  // Cette commande lance les tests dans ton projet
                }
            }
        }

    post {
        always {
            echo 'Pipeline terminée.'
        }
    }
}
