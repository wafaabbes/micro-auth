pipeline {
    agent any

    tools {
        // Si tu as défini un Git Tool ou NodeJS dans Jenkins, mentionne-le ici
        // exemple: nodejs 'Node18'
    }

    environment {
        NODE_ENV = 'development'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/wafaabbes/micro-auth.git', branch: 'main'
            }
        }

        stage('Vérification des versions') {
            steps {
                sh '''
                    echo "===== Node & NPM Versions ====="
                    node -v
                    npm -v
                '''
            }
        }

        stage('Install') {
            steps {
                sh '''
                    echo "===== Installation des dépendances ====="
                    npm install
                '''
            }
        }

        // Optionnel : Ajout de tests ou build ici
        // stage('Tests') {
        //     steps {
        //         sh 'npm test'
        //     }
        // }
    }

    post {
        always {
            echo 'Pipeline terminée.'
        }
    }
}
