pipeline {
    agent any

    environment {
        NODE_ENV = 'production'
    }

   stage('Checkout') {
    steps {
        git branch: 'main', url: 'https://github.com/wafaabbes/micro-auth.git'
    }
}

        stage('Install') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test || true'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t micro-auth:latest .'
            }
        }
    }
}
