pipeline {
    agent any

    environment {
        NODE_ENV = 'test'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/wafaabbes/micro-auth.git', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('backend') {
                    sh 'npx mocha --timeout 5000 tests/unit/**/*.test.js'
                }
            }
            post {
                always {
                    // Ajoutez au moins une étape valide ici
                    echo 'Tests terminés (succès ou échec)'
                    // Optionnel : archive les résultats de tests
                    archiveArtifacts artifacts: 'backend/test-results.xml', allowEmptyArchive: true
                }
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline terminé avec succès.'
        }
        failure {
            echo '❌ Échec du pipeline. Vérifie les logs.'
        }
        // Si vous gardez un bloc always au niveau global, ajoutez des steps
        always {
            echo 'Nettoyage...'
            // Actions de nettoyage éventuelles
        }
    }
}
