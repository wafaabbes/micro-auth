pipeline {
    agent any

    environment {
        // Force npm à ignorer les dépendances optionnelles inutiles
        NPM_CONFIG_OPTIONAL = 'false'
        // Utilise le cache Jenkins pour node_modules
        npm_config_cache = '${WORKSPACE}/.npm'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install') {
            steps {
                script {
                    // Nettoie le cache et saute les dépendances optionnelles
                    sh '''
                        npm cache clean --force
                        npm ci --no-optional --prefer-offline
                    '''
                }
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build' // Adaptez à votre script de build
            }
        }

        stage('Test') {
            steps {
                sh 'npm test' // Exécute les tests
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'dist/**/*' // Archive le résultat du build
            }
        }
    }

    post {
        always {
            cleanWs() // Nettoie l'espace de travail
        }
    }
}
