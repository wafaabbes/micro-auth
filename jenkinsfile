pipeline {
    agent any

    options {
        skipDefaultCheckout true // Évite le double checkout
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'main']], // Spécifie explicitement la branche main
                    userRemoteConfigs: [[
                        url: 'https://github.com/wafaabbes/micro-auth.git',
                        credentialsId: 'github' // Assurez-vous que ce credential existe
                    ]],
                    extensions: [
                        [$class: 'CleanBeforeCheckout'],
                        [$class: 'LocalBranch', localBranch: 'main']
                    ]
                ])
            }
        }

        stage('Install') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm run test:unit'
                sh 'npm run test:integration'
            }
        }

        stage('Build Docker Image') {
            when {
                expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                script {
                    docker.build("your-image-name:${env.BUILD_NUMBER}")
                }
            }
        }
    }

    post {
        always {
            echo "Build terminé - Résultat: ${currentBuild.currentResult}"
            cleanWs()
        }
    }
}
