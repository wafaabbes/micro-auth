pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/wafaabbes/micro-auth.git'
            }
        }

        stage('Install') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test || true' // ou `exit 0` si tu veux éviter l'échec
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t micro-auth:latest .'
            }
        }
    }
}
