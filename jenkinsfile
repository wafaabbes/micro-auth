pipeline {
    agent any

    environment {
        NODE_ENV = 'test'
    }

    stages {

        stage('Checkout Code') {
            steps {
                // Récupère le code depuis le repo Git
                git url: 'https://github.com/wafaabbes/micro-auth.git', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('backend') {
                    sh 'npx mocha --timeout 5000 tests/unit/**/*.test.js'
                }
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline terminé avec succès.'
        }
        failure {
            echo '❌ Échec du pipeline. Vérifie les logs.'
        }
    }
}
